<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.LearningCompose.TopToolbox.ChordController">
   <children>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button id="arrowBtn" fx:id="leftBtn" mnemonicParsing="false" onAction="#moveToLowerChord">
               <graphic>
                  <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../graphic/ArrowLeft.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <VBox>
               <children>
                  <HBox fx:id="chordNamesDynamicAboveHBox" spacing="3.0" />
                  <HBox fx:id="chordNamesDynamicBelowHBox" spacing="3.0">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
            <Button id="arrowBtn" fx:id="rightBtn" mnemonicParsing="false" onAction="#moveToHigherChord">
               <graphic>
                  <ImageView pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../graphic/ArrowRight.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
